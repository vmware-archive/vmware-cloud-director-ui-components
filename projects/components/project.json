{
    "name": "components",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "library",
    "root": "projects/components",
    "sourceRoot": "projects/components/src",
    "prefix": "vcd",

    "targets": {
        "pre-build": {
            "executor": "@nrwl/angular:package",
            "outputs": ["dist/components"],
            "options": {
                "project": "projects/components/ng-package.json"
            },
            "configurations": {
                "production": {
                    "tsConfig": "projects/components/tsconfig.lib.prod.json"
                },
                "development": {
                    "tsConfig": "projects/components/tsconfig.lib.json"
                }
            },
            "defaultConfiguration": "production",
            "dependsOn": ["build-18n-json", "^build"]
        },

        "build": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "node projects/components/src/assets/index.js",
                    "copyfiles -f projects/components/src/assets/i18n.json dist/components"
                ]
            },
            "dependsOn": ["pre-build"]
        },
        "test": {
            "executor": "@angular-devkit/build-angular:karma",
            "options": {
                "main": "projects/components/src/test.ts",
                "tsConfig": "projects/components/tsconfig.spec.json",
                "karmaConfig": "projects/components/karma.conf.js",
                "styles": ["node_modules/@clr/ui/clr-ui.min.css"],
                "stylePreprocessorOptions": {
                    "includePaths": ["node_modules"]
                }
            }
        },
        "lint": {
            "executor": "@angular-eslint/builder:lint",
            "options": {
                "lintFilePatterns": ["projects/components/**/*.ts", "projects/components/**/*.html"]
            }
        }
    }
}
