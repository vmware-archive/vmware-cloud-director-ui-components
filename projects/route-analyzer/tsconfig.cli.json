{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2016",
        "sourceMap": true,
        "outDir": "../../dist/route-analyzer",
        "removeComments": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["dom", "es2018", "es2020.string"]
    },
    "files": ["./src/cli.ts"]
}
