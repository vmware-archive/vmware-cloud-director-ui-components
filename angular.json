{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 2,
    "newProjectRoot": "projects",
    "projects": {
        "components": {
            "projectType": "library",
            "root": "projects/components",
            "sourceRoot": "projects/components/src",
            "prefix": "vcd",
            "targets": {
                "build": {
                    "executor": "@angular-devkit/build-angular:ng-packagr",
                    "options": {
                        "tsConfig": "projects/components/tsconfig.lib.json",
                        "project": "projects/components/ng-package.json"
                    }
                },
                "test": {
                    "executor": "@angular-devkit/build-angular:karma",
                    "options": {
                        "main": "projects/components/src/test.ts",
                        "tsConfig": "projects/components/tsconfig.spec.json",
                        "karmaConfig": "projects/components/karma.conf.js",
                        "styles": ["node_modules/@clr/ui/clr-ui.min.css"],
                        "stylePreprocessorOptions": {
                            "includePaths": ["node_modules"]
                        }
                    }
                },
                "lint": {
                    "executor": "@angular-eslint/builder:lint",
                    "options": {
                        "lintFilePatterns": ["projects/components/**/*.ts", "projects/components/**/*.html"]
                    }
                }
            }
        },
        "examples": {
            "projectType": "application",
            "generators": {
                "@schematics/angular:component": {
                    "style": "scss"
                }
            },
            "root": "projects/examples",
            "sourceRoot": "projects/examples/src",
            "prefix": "vcd",
            "targets": {
                "build": {
                    "executor": "@angular-devkit/build-angular:browser",
                    "options": {
                        "preserveSymlinks": true,
                        "outputPath": "dist/examples",
                        "index": "projects/examples/src/index.html",
                        "main": "projects/examples/src/main.ts",
                        "polyfills": "projects/examples/src/polyfills.ts",
                        "tsConfig": "projects/examples/tsconfig.app.json",
                        "aot": false,
                        "assets": [
                            "projects/examples/src/favicon.ico",
                            "projects/examples/src/assets",
                            "projects/examples/src/compodoc"
                        ],
                        "styles": [
                            "node_modules/@clr/icons/clr-icons.min.css",
                            "node_modules/@clr/ui/clr-ui.min.css",
                            "projects/examples/src/styles.scss"
                        ],
                        "scripts": ["node_modules/@clr/icons/clr-icons.min.js"],
                        "vendorChunk": true,
                        "extractLicenses": false,
                        "buildOptimizer": false,
                        "sourceMap": true,
                        "optimization": false,
                        "namedChunks": true
                    },
                    "configurations": {
                        "production": {
                            "fileReplacements": [
                                {
                                    "replace": "projects/examples/src/environments/environment.ts",
                                    "with": "projects/examples/src/environments/environment.prod.ts"
                                }
                            ],
                            "outputHashing": "all",
                            "sourceMap": false,
                            "namedChunks": false,
                            "aot": true,
                            "extractLicenses": true,
                            "vendorChunk": false,
                            "budgets": [
                                {
                                    "type": "initial",
                                    "maximumWarning": "2mb",
                                    "maximumError": "20mb"
                                },
                                {
                                    "type": "anyComponentStyle",
                                    "maximumWarning": "6kb",
                                    "maximumError": "10kb"
                                }
                            ]
                        }
                    },
                    "defaultConfiguration": ""
                },
                "serve": {
                    "executor": "@angular-devkit/build-angular:dev-server",
                    "options": {
                        "browserTarget": "examples:build"
                    },
                    "configurations": {
                        "production": {
                            "browserTarget": "examples:build:production"
                        }
                    }
                },
                "extract-i18n": {
                    "executor": "@angular-devkit/build-angular:extract-i18n",
                    "options": {
                        "browserTarget": "examples:build"
                    }
                },
                "test": {
                    "executor": "@angular-devkit/build-angular:karma",
                    "options": {
                        "main": "projects/examples/src/test.ts",
                        "polyfills": "projects/examples/src/polyfills.ts",
                        "tsConfig": "projects/examples/tsconfig.spec.json",
                        "karmaConfig": "projects/examples/karma.conf.js",
                        "assets": [
                            "projects/examples/src/favicon.ico",
                            "projects/examples/src/assets",
                            "projects/examples/src/compodoc"
                        ],
                        "styles": ["projects/examples/src/styles.scss"],
                        "scripts": []
                    }
                },
                "lint": {
                    "executor": "@angular-eslint/builder:lint",
                    "options": {
                        "lintFilePatterns": ["projects/examples/**/*.ts", "projects/examples/**/*.html"]
                    }
                },
                "e2e": {
                    "executor": "@angular-devkit/build-angular:protractor",
                    "options": {
                        "protractorConfig": "projects/examples/e2e/protractor.conf.js",
                        "devServerTarget": "examples:serve"
                    },
                    "configurations": {
                        "production": {
                            "devServerTarget": "examples:serve:production"
                        }
                    }
                },
                "deploy": {
                    "executor": "angular-cli-ghpages:deploy",
                    "options": {
                        "repo": "https://github.com/vmware/vmware-cloud-director-ui-components",
                        "baseHref": "/vmware-cloud-director-ui-components/",
                        "noSilent": true,
                        "name": "ps37",
                        "email": "prudhvi.af121@gmail.com"
                    }
                }
            }
        },
        "i18n": {
            "projectType": "library",
            "root": "projects/i18n",
            "sourceRoot": "projects/i18n/src",
            "prefix": "lib",
            "targets": {
                "build": {
                    "executor": "@angular-devkit/build-angular:ng-packagr",
                    "options": {
                        "tsConfig": "projects/i18n/tsconfig.lib.json",
                        "project": "projects/i18n/ng-package.json"
                    }
                },
                "test": {
                    "executor": "@angular-devkit/build-angular:karma",
                    "options": {
                        "main": "projects/i18n/src/test.ts",
                        "tsConfig": "projects/i18n/tsconfig.spec.json",
                        "karmaConfig": "projects/i18n/karma.conf.js"
                    }
                },
                "lint": {
                    "executor": "@angular-eslint/builder:lint",
                    "options": {
                        "lintFilePatterns": ["projects/i18n/**/*.ts", "projects/i18n/**/*.html"]
                    }
                }
            }
        },
        "ng-live-docs": {
            "projectType": "library",
            "root": "projects/ng-live-docs",
            "sourceRoot": "projects/ng-live-docs/src",
            "prefix": "lib",
            "targets": {
                "build": {
                    "executor": "@angular-devkit/build-angular:ng-packagr",
                    "options": {
                        "project": "projects/ng-live-docs/ng-package.json"
                    },
                    "configurations": {
                        "production": {
                            "tsConfig": "projects/ng-live-docs/tsconfig.lib.prod.json"
                        },
                        "development": {
                            "tsConfig": "projects/ng-live-docs/tsconfig.lib.json"
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "test": {
                    "executor": "@angular-devkit/build-angular:karma",
                    "options": {
                        "main": "projects/ng-live-docs/src/test.ts",
                        "tsConfig": "projects/ng-live-docs/tsconfig.spec.json",
                        "karmaConfig": "projects/ng-live-docs/karma.conf.js"
                    }
                }
            }
        },
        "route-analyzer": {
            "projectType": "library",
            "root": "projects/route-analyzer",
            "sourceRoot": "projects/route-analyzer/src",
            "prefix": "vcd",
            "targets": {
                "build": {
                    "executor": "@angular-devkit/build-angular:ng-packagr",
                    "options": {
                        "tsConfig": "projects/route-analyzer/tsconfig.lib.json",
                        "project": "projects/route-analyzer/ng-package.json"
                    }
                },
                "test": {
                    "executor": "@angular-devkit/build-angular:karma",
                    "options": {
                        "main": "projects/route-analyzer/src/test.ts",
                        "tsConfig": "projects/route-analyzer/tsconfig.spec.json",
                        "karmaConfig": "projects/route-analyzer/karma.conf.js"
                    }
                },
                "lint": {
                    "executor": "@angular-eslint/builder:lint",
                    "options": {
                        "lintFilePatterns": ["projects/route-analyzer/**/*.ts", "projects/route-analyzer/**/*.html"]
                    }
                }
            }
        }
    }
}
